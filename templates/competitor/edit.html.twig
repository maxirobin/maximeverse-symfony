{% extends 'base.html.twig' %}

{% block title %}Edit Competitor{% endblock %}

{% block body %}
    <h1>Edit Competitor</h1>

    {{ include('competitor/_form.html.twig', {'button_label': 'Update'}) }}

    <a href="{{ path('dashboard') }}">back to list</a>

    <form method="post" action="{{ path('app_competitor_delete', {'id': competitor.id}) }}" onsubmit="return confirm('Are you sure you want to delete this item?');">
        <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ competitor.id) }}">
        <button class="btn">Delete</button>
    </form>
{% endblock %}
